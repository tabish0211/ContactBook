
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div>
    <form action="~/User/SearchUser">
        <table>
            <tr>
                <td>User Name&nbsp;</td>
                <td><input type="text" name="UserName" /></td>
                <td><input type="submit" value="Search" /></td>

            </tr>
        </table>
    </form>
    
</div>

<div>

    <form action="~/User/EditUser" method="post">
        @{

            ContactBook.Models.User user = ViewBag.User as ContactBook.Models.User;
            if (user != null)
            {

                <table>
                    <tr>
                        <td>User Name : &nbsp; </td>
                        <td><input type="text" name="UserName" value="@user.UserName" /></td>
                    </tr>
                    <tr>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>

                    <tr>
                        <td>Mobile Number : &nbsp; </td>
                        <td><input type="text" name="MobileNumber" value="@user.MobileNumber" /></td>
                    </tr>

                    <tr>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>

                    <tr>
                        <td>Email Id : &nbsp; </td>
                        <td><input type="text" name="EmailId" value="@user.EmailId" /></td>
                    </tr>

                    <tr>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>
                    <tr>
                        <td> </td>
                        <td>

                            <input type="submit" value="Update" />

                        </td>
                    </tr>
                </table>
            }
        }

    </form>
</div>

